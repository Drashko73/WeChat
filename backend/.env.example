# Environment Configuration Example
# Copy this file to .env.development or .env.production and update the values

# Application Configuration
NODE_ENV=development
HOST=http://localhost
PORT=5000
SWAGGER_ENABLED=true

# Database Configuration
MONGO_URI=mongodb://root:password@localhost:27017/wechat?authSource=admin
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
SALT_ROUNDS=10

# Email Configuration
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Frontend URLs
FRONTEND_VERIFICATION_URL=http://localhost:4200/verify-email
FRONTEND_LOGIN_URL=http://localhost:4200/login

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:8000,http://localhost:80
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,X-Device-ID

# Token Configuration
JWT_EXPIRATION_TIME=30m
JWT_ALGORITHM=HS256
JWT_ISSUER=WeChat
REFRESH_TOKEN_EXPIRATION_MINUTES=60

# Verification Code Configuration
VERIFICATION_CODE_LENGTH=6
VERIFICATION_CODE_EXPIRATION_MINUTES=5
VERIFICATION_CODE_CLEANUP_INTERVAL_MINUTES=1

# Password Reset Configuration
PASSWORD_RESET_CODE_LENGTH=6
PASSWORD_RESET_CODE_EXPIRATION_MINUTES=5
PASSWORD_RESET_CODE_CLEANUP_INTERVAL_MINUTES=10

# Cleanup Job Configuration
REFRESH_TOKEN_CLEANUP_INTERVAL_MINUTES=5
